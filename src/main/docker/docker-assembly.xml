<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>docker</id>
    <fileSets>
        <fileSet>
            <directory>${basedir}/${project.build.directory}</directory>
            <includes>
                <include>${project.artifactId}-${project.version}.war</include>
            </includes>
            <outputDirectory>war/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/conf/</directory>
            <includes>
                <include>*.xml</include>
            </includes>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>